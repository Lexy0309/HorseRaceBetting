.container.themed-content-special
  .row
    .col-lg-12
      %h1="Bets of category #{Bet::CATEGORY_DATA[@id]}"
      %table#historyMatches.table.table-bordered
        %thead
          %tr
            %th Date
            %th Amount
            %td Reward
            %td Race 1
            %td Race 2
            %td Race 3
            %td Race 4
        %tbody
          -@data.each do |bet|
            %tr
              %td=bet.start_date
              %td="$#{bet.amount}"
              %td="$#{bet.reward}"
              -x = 4
              -bet.bet_races.each do |br|
                -x -= 1
                %td=link_to("#{br.race.track.title} R#{br.race.race_number}",race_path(br.race_id))
              -x.times do
                %td
        %tfoot
          %tr
            %th{colspan:7} Test
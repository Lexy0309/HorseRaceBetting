.container.themed-content
  .row
    .col-md-3
    .col-md-6
      =image_tag('logo3.jpg',style:'width:100%;')
      .card
        .card-body
          %h1.card-title Sign up
          %a{href:'/users/auth/facebook'}
            %img{src:image_path('fb_login.png'),style:'width:100%;padding:20px;'}
          %h3{style:'text-align:center;'} Or
          =form_for(resource,as: resource_name, url: registration_path(resource_name)) do |f|
            =devise_error_messages!

            .form-group
              .field
                =f.label :email
                %br
                =f.email_field :email, autofocus: true, class: 'form-control'

            .form-group
              .field
                =f.label :password
                -if @minimum_password_length
                  %em
                    ="(#{@minimum_password_length}"
                    characters minimum)
                %br
                =f.password_field :password, autocomplete: :off, class: 'form-control'

            .form-group
              .field
                =f.label :password_confirmation
                %br
                =f.password_field :password_confirmation, autocomplete: :off, class: 'form-control'

            .actions
              =f.submit 'Sign up', class: 'btn btn-secondary', style: 'width: 100%; font-size: 22px; font-weight: bold;'
